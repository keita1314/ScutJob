<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
   
    
      <RelativeLayout
        android:id="@+id/consultHeader" 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#1E90FF"
    	>
    	<TextView
    	    android:id="@+id/headerTitle"
    	   android:layout_width="wrap_content"
    	    android:layout_height="fill_parent"
    	    android:textColor="#FFFFFF"
    	    android:textSize="20dip"
    	    android:layout_centerInParent="true"
    	    android:gravity="center"
    	    android:text="咨询"
    	    />
    	<ImageButton 
    	    android:id="@+id/listViewHeaderImageBtn"
    	    android:layout_alignParentLeft="true"
    	    android:layout_width="30dip"
    	    android:layout_height="35dip"
    	    android:layout_centerVertical="true"
    	    android:background="#00000000"
    	    android:src="@drawable/return_btn"
    	    />
    	
    </RelativeLayout>
	<RelativeLayout
	    android:layout_below="@id/consultHeader"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >

	    <LinearLayout
	        android:id="@+id/formLayout"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >

	        <RelativeLayout 
	            
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	        <TextView 
	            android:id="@+id/nameTv"
	            android:text="姓名"
	             android:textSize="20dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            />
	        <EditText
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/nameTv"
	            android:gravity="center_vertical"
	            android:hint="姓名"
	            android:id="@+id/nameText" 
	            />
	        </RelativeLayout>
	         <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	        <TextView
	            android:id="@+id/mailTv" 
	            android:text="信箱"
	            android:textSize="20dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            />
	        <EditText
	            android:id="@+id/mailText" 
	            android:layout_width="fill_parent"
	            android:layout_toRightOf="@id/mailTv"
	            android:layout_height="wrap_content"
	            android:hint="邮箱"
	            android:gravity="center_vertical"
	            />
	 		</RelativeLayout>
	 		 <RelativeLayout 
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content">
	  
	        <TextView 
	            android:id="@+id/contentTv"
	            android:text="内容"
	            android:textSize="20dip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            />

	        <EditText
	            android:id="@+id/contentText"
	            android:layout_width="fill_parent"
	            android:layout_toRightOf="@id/contentTv"
	            android:layout_height="100dip"
	            android:ems="10"
	            android:hint="不要超过500字" />
	        </RelativeLayout>

		</LinearLayout>
		<Button 
		    android:id="@+id/submit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/formLayout"
		    android:layout_centerHorizontal="true"
		    android:text="提交"
		    />
  	</RelativeLayout>

</RelativeLayout>